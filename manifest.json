{
  "name": "GD Styles",
  "description": "Copy CSS styles with Tailwind classes",
  "version": "0.0.0.1",
  "manifest_version": 3,
  "icons": {
    "128": "assets/icon.png"
  },
  "permissions": ["contextMenus", "tabs", "clipboardWrite"],
  "host_permissions": ["<all_urls>"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "run_at": "document_start",
      "js": ["dist/content.js", "dist/conversions.bundle.js", "dist/utilities.bundle.js"]
    }
  ],
  "action": {
    "default_popup": "dist/popup.html"
  },
  "background": {
    "service_worker": "dist/eventPage.bundle.js"
  },
  "devtools_page": "dist/devtools.html"
}
